{
    "name": "goal_recommender",
    "domains": ["finance"],
    "module_path": "agents.goal_recommender.goal_recommender",
    "capabilities": {
        "chainable": true,
        "memory_access": false
    },
    "input_schema": {
        "required": [],
        "properties": {
            "analysis": {
                "type": "object",
                "description": "Financial analysis object with total, positive, and negative amounts. If not provided, default sample data will be used."
            }
        }
    },
    "output_schema": {
        "properties": {
            "recommendations": { "type": "array" }
        }
    },
    "sample_input": {
        "analysis": { "total": 50, "positive": 100, "negative": -50 }
    },
    "sample_output": {
        "recommendations": ["Increase savings", "Reduce expenses"]
    }
}