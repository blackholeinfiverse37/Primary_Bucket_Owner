{
    "name": "law_agent",
    "domains": ["legal", "law"],
    "module_path": "agents.law_agent.law_agent",
    "execution_mode": "remote",
    "api_url": "https://legal-agent-api-3yqg.onrender.com",
    "capabilities": {
        "chainable": true,
        "memory_access": true
    },
    "input_schema": {
        "required": ["query"],
        "properties": {
            "query": {
                "type": "string",
                "description": "Legal query or case description"
            },
            "agent_type": {
                "type": "string",
                "enum": ["basic", "adaptive", "enhanced"],
                "description": "Type of legal agent to use (basic, adaptive, or enhanced)"
            },
            "location": {
                "type": "string",
                "description": "Location for jurisdiction-specific guidance"
            },
            "feedback": {
                "type": "boolean",
                "description": "Whether to collect feedback for learning"
            }
        }
    },
    "output_schema": {
        "properties": {
            "domain": { "type": "string" },
            "confidence": { "type": "number" },
            "legal_route": { "type": "string" },
            "timeline": { "type": "string" },
            "outcome": { "type": "string" },
            "process_steps": { "type": "array" },
            "glossary": { "type": "object" },
            "jurisdiction": { "type": "string" },
            "constitutional_backing": { "type": "array" },
            "estimated_cost": { "type": "string" },
            "success_rate": { "type": "number" }
        }
    },
    "sample_input": {
        "query": "I was wrongfully terminated from my job. What are my rights?",
        "agent_type": "enhanced",
        "location": "California, USA",
        "feedback": true
    },
    "sample_output": {
        "domain": "employment_law",
        "confidence": 0.85,
        "legal_route": "File complaint with labor department",
        "timeline": "30-90 days",
        "outcome": "Potential reinstatement or compensation",
        "process_steps": ["Gather evidence", "File complaint", "Mediation", "Hearing"],
        "glossary": {
            "wrongful_termination": "Termination that violates employment laws"
        },
        "jurisdiction": "California",
        "constitutional_backing": ["Due Process Clause"],
        "estimated_cost": "$5,000 - $15,000",
        "success_rate": 0.75
    }
}